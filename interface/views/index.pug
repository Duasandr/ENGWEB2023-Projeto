extends layout

block content
    // Page Container
    .w3-container.w3-content(style="max-width:1400px;margin-top:80px")
        // The Grid
        .w3-row
            // Left Column
            .w3-col.m3
                // Profile
                .w3-card.w3-round.w3-white
                    .w3-container
                        h4.w3-center My Profile
                        p.w3-center
                            //img.w3-circle(src="#" style="height:106px;width:106px" alt="Avatar")
                        hr
                        p
                            i.fa.fa-pencil.fa-fw.w3-margin-right.w3-text-theme Designer, UI
                        p
                            i.fa.fa-home.fa-fw.w3-margin-right.w3-text-theme London, UK
                        p
                            i.fa.fa-birthday-cake.fa-fw.w3-margin-right.w3-text-theme April 1, 1988

                // Accordion
                .w3-card.w3-round
                    .w3-white
                        button.w3-button.w3-block.w3-theme-l1.w3-left-align(onclick="myFunction('Demo1')")
                            i.fa.fa-circle-o-notch.fa-fw.w3-margin-right My Groups
                        .w3-hide.w3-container(id="Demo1")
                            p Some text..

                br

                // Interests
                .w3-card.w3-round.w3-white.w3-hide-small
                    .w3-container
                        p Interests
                        p
                            span.w3-tag.w3-small.w3-theme-d5 News

            block middle-column