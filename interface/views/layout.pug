doctype html

html
    title MRB
    head
        meta(charset="UTF-8")
        meta(name="viewport" content="width=device-width, initial-scale=1")
        link(rel="stylesheet" href="/stylesheets/w3.css")
        link(rel="stylesheet" href="/stylesheets/w3-theme-blue-grey.css")
        link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css")
        link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css")
        script(src="/javascripts/jquery-3.7.0.min.js")
        script(src="/javascripts/nav.js")

    body.w3-theme-l5
        // Navbar
        header.w3-top
            .w3-bar.w3-theme-d2.w3-left-align.w3-large
                a.w3-bar-item.w3-button.w3-padding-large.w3-theme-d4(href='/')
                    i.glyphicon.glyphicon-home.w3-margin-right
                
                if(user.level == 'admin')
                    a.w3-bar-item.w3-button.w3-padding-large.w3-theme-d4(href='/ruas/admin') Ruas 
                else
                    a.w3-bar-item.w3-button.w3-padding-large.w3-theme-d4(href='/ruas') Ruas

                //a.w3-bar-item.w3-button.w3-padding-large.w3-theme-d4(href='/ruas') Ruas
                a.w3-bar-item.w3-button.w3-padding-large.w3-theme-d4(href='/posts') Posts
                if(user.level == 'admin')
                    a.w3-bar-item.w3-button.w3-padding-large.w3-theme-d4(href='/users') Utilizadores
                a.w3-bar-item.w3-button.w3-padding-large.w3-theme-d4(href='/auth/logout') Logout 

        // Page Container
        .w3-container.w3-content(style="max-width:1400px;margin-top:80px")
            block content

        // Footer 
        footer.w3-container.w3-theme-d3.w3-padding-16
            h5 Generated by MRB #{new Date().getFullYear()}

        footer.w3-container.w3-theme-d5
            p Powered by 
                a(href="https://www.w3schools.com/w3css/default.asp" target="_blank") w3.css